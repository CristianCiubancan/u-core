{
  "compilerOptions": {
    // Removed composite/incremental build to ensure fresh emit when outDir is cleaned
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist/scripts",
    "rootDir": "src/scripts",
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "node_modules/@citizenfx"],
    "skipLibCheck": true
  },
  "include": ["src/scripts/**/*"]
}
